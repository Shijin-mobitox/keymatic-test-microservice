{
  "realm": "kymatic",
  "enabled": true,
  "displayName": "Kymatic Multi-Tenant Realm",
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "email": "admin@kymatic.com",
      "credentials": [
        {
          "type": "password",
          "value": "admin",
          "temporary": false
        }
      ],
      "realmRoles": ["admin"],
      "attributes": {
        "tenant_id": ["tenant1"]
      }
    },
    {
      "username": "user1",
      "enabled": true,
      "emailVerified": true,
      "firstName": "User",
      "lastName": "One",
      "email": "user1@tenant1.com",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": ["user"],
      "attributes": {
        "tenant_id": ["tenant1"]
      }
    },
    {
      "username": "user2",
      "enabled": true,
      "emailVerified": true,
      "firstName": "User",
      "lastName": "Two",
      "email": "user2@tenant2.com",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": ["user"],
      "attributes": {
        "tenant_id": ["tenant2"]
      }
    }
  ],
  "clients": [
    {
      "clientId": "gateway-service",
      "enabled": true,
      "publicClient": false,
      "secret": "gateway-secret",
      "redirectUris": ["*"],
      "protocol": "openid-connect"
    },
    {
      "clientId": "react-client",
      "enabled": true,
      "publicClient": true,
      "redirectUris": [
        "*"
      ],
      "webOrigins": [
        "+"
      ],
      "protocol": "openid-connect",
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "implicitFlowEnabled": false
    },
    {
      "clientId": "api-service",
      "enabled": true,
      "publicClient": false,
      "secret": "api-secret",
      "redirectUris": ["*"],
      "protocol": "openid-connect"
    },
    {
      "clientId": "tenant-service",
      "enabled": true,
      "publicClient": false,
      "secret": "tenant-secret",
      "redirectUris": ["*"],
      "protocol": "openid-connect",
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true
    }
  ],
  "roles": {
    "realm": [
      {"name": "admin"},
      {"name": "user"}
    ]
  },
  "protocolMappers": [
    {
      "name": "tenant-id-mapper",
      "protocol": "openid-connect",
      "protocolMapper": "oidc-usermodel-attribute-mapper",
      "config": {
        "user.attribute": "tenant_id",
        "claim.name": "tenant_id",
        "jsonType.label": "String",
        "id.token.claim": "true",
        "access.token.claim": "true",
        "userinfo.token.claim": "true"
      }
    }
  ]
}
