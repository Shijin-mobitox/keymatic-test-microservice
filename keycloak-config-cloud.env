# QA Environment - Cloud Keycloak Configuration (Skycloak)
# Use this for cloud-hosted Keycloak instance
# To use: copy to .env or set environment variables manually

# Keycloak URLs (cloud instance)
# KEYCLOAK_BASE_URL is the primary configuration used by both tenant-service and workflow-service
KEYCLOAK_BASE_URL=https://f12e2153-e40c-4615-b9c9-3a4e6f5fd782.us.skycloak.io
# KEYCLOAK_SERVER_URL is kept for backward compatibility (workflow-service will prefer KEYCLOAK_BASE_URL if set)
KEYCLOAK_SERVER_URL=https://f12e2153-e40c-4615-b9c9-3a4e6f5fd782.us.skycloak.io
# KEYCLOAK_ISSUER_URI can be set explicitly, or will be constructed from KEYCLOAK_BASE_URL and KEYCLOAK_REALM
KEYCLOAK_ISSUER_URI=https://f12e2153-e40c-4615-b9c9-3a4e6f5fd782.us.skycloak.io/realms/kymatic
KEYCLOAK_REALM=kymatic

# Keycloak Admin Credentials (from your cloud instance)
KEYCLOAK_ADMIN_USERNAME=admin-gG7X0T1x
KEYCLOAK_ADMIN_PASSWORD=blEzm8bnafcGnv50

# For cloud, services communicate externally (no internal Docker network URLs)
KEYCLOAK_INTERNAL_URL=https://f12e2153-e40c-4615-b9c9-3a4e6f5fd782.us.skycloak.io

# Spring Boot specific environment variables
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI=https://f12e2153-e40c-4615-b9c9-3a4e6f5fd782.us.skycloak.io/realms/kymatic

# KeycloakClientWrapper Configuration
KEYCLOAK_CLIENT_ID=admin-cli
KEYCLOAK_CLIENT_SECRET=

# Database Configuration (using host machine PostgreSQL)
SPRING_DATASOURCE_URL=jdbc:postgresql://host.docker.internal:5432/postgres
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=root

# Server Configuration
SERVER_PORT=8083

# Organization cleanup setting
KEYCLOAK_ORG_CLEANUP_ENABLED=false
